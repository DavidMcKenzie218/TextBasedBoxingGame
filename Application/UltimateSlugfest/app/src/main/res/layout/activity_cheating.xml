<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cheating_output"
        android:text="@string/cheating_is_wrong"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cheating_message"
        android:text="@string/punishment"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cheating_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cheating_restart"
        android:text="@string/restart_game"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cheating_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"/>

</RelativeLayout>